div(ng-include='"components/navbar/navbar.html"')
.con(ng-controller='ThingsCtrl')
  table(class="things-container")
    tr(ng-repeat="thing in things") 
      td(align="left")
        div(class="thing-name-container")
          a(ng-href="{{getUrl(thing)}}", class="thing-text", style="white-space:pre;") 
            {{thing.name}} 
          br
          {{thing.desc}}
      td(align="right")
        div(class="count")
          {{thing.votes}}
      td(align="right")
        div(class="thing-votebuttons-container")
          div(ng-click="upvote(thing)", class="increment up") &nbsp;
          div(ng-click="downvote(thing)", class="increment down") &nbsp;

footer.footer
  .container
    p
      | hoPSA
      = ' | '
      HopHacks 2015 <3

script.
  var $voteUp = $('.up').click(function() {
    $(this).removeClass('increment');
    $(this).css('color', 'black');
  });
