.con(ng-controller='ThingsCtrl')
  table(class="things-container")
    tr(ng-repeat="thing in things") 
      td(align="left")
        div(class="thing-name-container")
          a(href= '/') {{thing.name}}
      td(align="right")
        div(class="thing-votes-container")
          {{thing.votes}}
      td(align="right")
        div(class="thing-votebuttons-container")
          button.btn.btn-success(ng-click = 'upvote(thing)') ^ 
          button.btn.btn-danger(ng-click = 'downvote(thing)') v

