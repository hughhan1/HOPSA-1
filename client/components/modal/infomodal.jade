div(ng-controller='MainCtrl')
  .modal-header  
    button.close(type='button', ng-click='$dismiss()') &times;
    h4.modal-title Information
  .modal-body
    form
      table
        tr
          th 
            p Event Name:&nbsp;  
          td 
            p {{ modalEvent.name }}
        tr
          th 
            p Description:&nbsp;  
          td 
            p {{ modalEvent.desc }}
        tr
          th 
            p Hosts:&nbsp;  
          td 
            p {{ modalEvent.host }}
  .modal-footer(ng-controller='ThingsCtrl')
    button.btn.btn-success(ng-click='upvote(modalEvent)') Upvote
    button.btn.btn-danger(ng-click='downvote(modalEvent)') Downvote